<LightsButtons>:
	orientation:'vertical'
	ToggleButton:
		id:BEACON
		background_normal:'atlas://myatlas/beacon_off'
	    background_down:'atlas://myatlas/beacon_on'
		on_press:root.toggle(self.state,'BEACON')
